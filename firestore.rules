rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Card catalog - public read
    match /cardCatalog/{docId} {
      allow read: if true;
      allow write: if false; // Only via Cloud Functions
    }
    
    // Card prices - public read
    match /cardPrices/{docId} {
      allow read: if true;
      allow write: if false; // Only via Cloud Functions
    }
    
    // User data requires authentication
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Feedback - authenticated users can create, only owner can read
    match /feedback/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Admin only via console
    }
  }
}
